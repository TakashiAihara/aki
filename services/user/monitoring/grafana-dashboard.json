{
  "annotations": {
    "list": []
  },
  "description": "Aki User Service Monitoring Dashboard",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Service Health",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "up{job=\"user-service\"}",
          "legendFormat": "Health"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "text": "Down", "color": "red" }, "1": { "text": "Up", "color": "green" } }, "type": "value" }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "title": "Request Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"user-service\"}[5m])",
          "legendFormat": "{{method}} {{path}}"
        }
      ]
    },
    {
      "title": "Response Time (p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"user-service\"}[5m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "title": "Authentication Events",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(auth_events_total{job=\"user-service\"}[5m])",
          "legendFormat": "{{event_type}}"
        }
      ]
    },
    {
      "title": "Login Success Rate",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(auth_events_total{job=\"user-service\",event_type=\"login_success\"}[5m])) / sum(rate(auth_events_total{job=\"user-service\",event_type=~\"login_.*\"}[5m])) * 100",
          "legendFormat": "Success Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 90 },
              { "color": "green", "value": 99 }
            ]
          }
        }
      }
    },
    {
      "title": "Active Refresh Tokens",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
      "targets": [
        {
          "expr": "refresh_tokens_active{job=\"user-service\"}",
          "legendFormat": "Active Tokens"
        }
      ]
    },
    {
      "title": "Token Refresh Rate",
      "type": "timeseries",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 12 },
      "targets": [
        {
          "expr": "rate(token_refreshes_total{job=\"user-service\"}[5m]) * 60",
          "legendFormat": "Refreshes/min"
        }
      ]
    },
    {
      "title": "Database Connection Pool",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "pg_pool_active_connections{job=\"user-service\"}",
          "legendFormat": "Active"
        },
        {
          "expr": "pg_pool_idle_connections{job=\"user-service\"}",
          "legendFormat": "Idle"
        },
        {
          "expr": "pg_pool_waiting_connections{job=\"user-service\"}",
          "legendFormat": "Waiting"
        }
      ]
    },
    {
      "title": "Redis Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "targets": [
        {
          "expr": "redis_memory_used_bytes{job=\"user-service\"}",
          "legendFormat": "Used Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"user-service\",status=~\"5..\"}[5m])",
          "legendFormat": "5xx Errors"
        },
        {
          "expr": "rate(http_requests_total{job=\"user-service\",status=~\"4..\"}[5m])",
          "legendFormat": "4xx Errors"
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["aki", "user-service", "authentication"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "browser",
  "title": "Aki User Service",
  "uid": "aki-user-service",
  "version": 1,
  "weekStart": ""
}
